<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">
<LinearLayout
    android:id="@+id/home_linear_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    android:orientation="vertical"
    tools:context="com.matteodanelli.nanodegreeproject1.HomeActivity">

    <android.support.v7.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="#009ACD"
        android:elevation="4dp"
        android:theme="@style/ThemeOverlay.AppCompat.ActionBar"
        app:popupTheme="@style/ThemeOverlay.AppCompat.Light"/>

    <TextView
        android:id="@+id/home_title"
        android:text="My Nanodegree Apps"
        android:textSize="32dp"
        android:gravity="center"
        android:textColor="#000000"
        android:paddingTop="20dp"
        android:paddingBottom="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <android.support.v7.widget.CardView
        android:id="@+id/home_card_1"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        style="@style/HomeCardViewStyle"
        app:cardBackgroundColor="#2E3D49"
        card_view:cardCornerRadius="4dp"
        app:cardElevation="8dp"
        app:cardUseCompatPadding="true" >
        <TextView
            android:id="@+id/home_card_1_text"
            android:text="Popular Movies"
            android:textSize="22dp"
            android:gravity="center"
            android:textColor="#FFFFFF"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />
    </android.support.v7.widget.CardView>

    <android.support.v7.widget.CardView
        android:id="@+id/home_card_2"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:paddingTop="20dp"
        style="@style/HomeCardViewStyle"
        app:cardBackgroundColor="#2E3D49"
        card_view:cardCornerRadius="4dp"
        app:cardElevation="8dp"
        app:cardUseCompatPadding="true" >
        <TextView
            android:id="@+id/home_card_2_text"
            android:text="Stock Hawk"
            android:textSize="22dp"
            android:gravity="center"
            android:textColor="#FFFFFF"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />
    </android.support.v7.widget.CardView>

    <android.support.v7.widget.CardView
        android:id="@+id/home_card_3"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:paddingTop="20dp"
        style="@style/HomeCardViewStyle"
        app:cardBackgroundColor="#2E3D49"
        card_view:cardCornerRadius="4dp"
        app:cardElevation="8dp"
        app:cardUseCompatPadding="true" >
        <TextView
            android:id="@+id/home_card_3_text"
            android:text="Build it Bigger"
            android:textSize="22dp"
            android:gravity="center"
            android:textColor="#FFFFFF"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />
    </android.support.v7.widget.CardView>

    <android.support.v7.widget.CardView
        android:id="@+id/home_card_4"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:paddingTop="20dp"
        style="@style/HomeCardViewStyle"
        app:cardBackgroundColor="#2E3D49"
        card_view:cardCornerRadius="4dp"
        app:cardElevation="8dp"
        app:cardUseCompatPadding="true" >
        <TextView
            android:id="@+id/home_card_4_text"
            android:text="Make Your App Material"
            android:textSize="22dp"
            android:gravity="center"
            android:textColor="#FFFFFF"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />
    </android.support.v7.widget.CardView>

    <android.support.v7.widget.CardView
        android:id="@+id/home_card_5"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:paddingTop="20dp"
        style="@style/HomeCardViewStyle"
        app:cardBackgroundColor="#2E3D49"
        card_view:cardCornerRadius="4dp"
        app:cardElevation="8dp"
        app:cardUseCompatPadding="true" >
        <TextView
            android:id="@+id/home_card_5_text"
            android:text="Go Ubiquitous"
            android:textSize="22dp"
            android:gravity="center"
            android:textColor="#FFFFFF"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />
    </android.support.v7.widget.CardView>

    <android.support.v7.widget.CardView
        android:id="@+id/home_card_6"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:paddingTop="20dp"
        style="@style/HomeCardViewStyle"
        app:cardBackgroundColor="#2E3D49"
        card_view:cardCornerRadius="4dp"
        app:cardElevation="8dp"
        app:cardUseCompatPadding="true" >
        <TextView
            android:id="@+id/home_card_6_text"
            android:text="Capstone"
            android:textSize="22dp"
            android:gravity="center"
            android:textColor="#FFFFFF"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />
    </android.support.v7.widget.CardView>




</LinearLayout>
</ScrollView>